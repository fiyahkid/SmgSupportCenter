		<li><a href="#tab2" data-toggle="tab" style="background-color: #666; color: white;">Antworten</a></li>
		<li><a href="#tab3" data-toggle="tab" style="background-color: #666; color: white;">Weiterleiten</a></li>
	</ul>
	<div class="tab-content">
		<div class="tab-pane active" id="tab1">
			
			<div class="well well-small" style="margin-left: -10px; margin-top: -20px; width: 97.5%; max-height: 400px; position: absolute;" ng-show="currentMsg">
				<div class="well well-small" style="height: 20px; max-height: 20px;">
					<p class="pull-left"><span>Betreff: </span>{{currentMsg.Debitor}} // {{currentMsg.Produkt}} // {{currentMsg.Fehlermeldung}}</p>
					<p class="pull-right"><span>Ticket-ID: </span>{{currentMsg.IdTicketsystem}}</p>
				</div>
				<div class="well well-small" style="height: 280px; max-height: 280px">
					<blockquote>
						<p>{{currentMsg.Fehlertext}}</p>
						<small>{{currentMsg.Datum}}</small>


						<script type="text/javascript">
							console.log('bla');

						</script>	
					</blockquote>
				</div>
			</div>

		</div>
		<div class="tab-pane" id="tab2"><p>bla2</p></div>
		<div class="tab-pane" id="tab3"><p>bla3</p></div>
	</div>
</div>




	

